    <button data-category="Defending" class="filter-btn">Defending</button>
    <button data-category="Tackling" class="filter-btn">Tackling</button>
    <button data-category="Interceptions" class="filter-btn">Interceptions</button>
    <button data-category="Goalkeeping" class="filter-btn">Goalkeeping</button>
