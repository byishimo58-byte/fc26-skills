<script>
// Part 3: Defensive Control + Final Batch
const skills3 = [
    { name:"Slide Tackle", category:"Tackling", execution:"Press Circle/B while moving", difficulty:"★★★☆☆", tips:"Use carefully to avoid fouls.", media:"https://media.giphy.com/media/3o6ZsZWyX1kXq6KZq0/giphy.gif" },
    { name:"Standing Tackle", category:"Tackling", execution:"Press Circle/B", difficulty:"★★☆☆☆", tips:"Quickly dispossess opponent.", media:"https://media.giphy.com/media/l0HlKXQzO0p4O6Yuk/giphy.gif" },
    { name:"Jockey", category:"Defending", execution:"Hold L2/LT + movement", difficulty:"★★☆☆☆", tips:"Maintain defensive stance and track player.", media:"https://media.giphy.com/media/xUPGcl3ijlPWaH2J5i/giphy.gif" },
    { name:"Interception", category:"Interceptions", execution:"Move into path + press tackle", difficulty:"★★★☆☆", tips:"Cut passing lanes effectively.", media:"https://media.giphy.com/media/l41lFw057lAJQMwg0/giphy.gif" },
    { name:"Goalkeeper Save", category:"Goalkeeping", execution:"Automatic/Manual", difficulty:"★★★★☆", tips:"Use reflex and positioning.", media:"https://media.giphy.com/media/3o6Zt481isNVuQI1l6/giphy.gif" },
    { name:"Clearance", category:"Defending", execution:"Shoot button in defense", difficulty:"★★☆☆☆", tips:"Clear danger quickly.", media:"https://media.giphy.com/media/3o7abB06u9bNzA8lu8/giphy.gif" },
    { name:"Pressure", category:"Defending", execution:"Hold R1/RB", difficulty:"★★★☆☆", tips:"Close down attacker quickly.", media:"https://media.giphy.com/media/l3vR0gbJKbY9K1l3K/giphy.gif" },
    { name:"Counter Attack", category:"Movement", execution:"Quick sprint + pass", difficulty:"★★★☆☆", tips:"Exploit space after regain.", media:"https://media.giphy.com/media/3o6ZsYWHTT9eYpFOV2/giphy.gif" },
    { name:"Slide Intercept", category:"Interceptions", execution:"Slide + move into lane", difficulty:"★★★★☆", tips:"Perfect for fast passes.", media:"https://media.giphy.com/media/l0HlSNOxJB956qwfK/giphy.gif" },
    { name:"Defensive Block", category:"Defending", execution:"Hold position + L2/LT", difficulty:"★★★☆☆", tips:"Block shots effectively.", media:"https://media.giphy.com/media/3o6Zt6ML6BklcajjsA/giphy.gif" }
];

// Display skills
const container = document.getElementById("skillContainer");
function displaySkills(skillList){
    container.innerHTML = "";
    skillList.forEach(s => {
        const card = document.createElement("div");
        card.className = "skill-card";
        card.innerHTML = `<h3>${s.name}</h3><p>${s.category}</p><p>${s.execution}</p>`;
        card.addEventListener("click", ()=>{
            modal.style.display = "block";
            modalName.textContent = s.name;
            modalCategory.textContent = s.category;
            modalExecution.textContent = s.execution;
            modalDifficulty.textContent = s.difficulty;
            modalTips.textContent = s.tips;
            modalMedia.innerHTML = `<img src="${s.media}" alt="${s.name}">`;
        });
        container.appendChild(card);
    });
}
displaySkills(skills3);

// Search
const searchInput = document.getElementById("searchInput");
searchInput.addEventListener("input", ()=>{
    const term = searchInput.value.toLowerCase();
    const filtered = skills3.filter(s => s.name.toLowerCase().includes(term));
    displaySkills(filtered);
});

// Filter buttons
const filterButtons = document.querySelectorAll(".filter-btn");
filterButtons.forEach(btn => {
    btn.addEventListener("click", ()=>{
        filterButtons.forEach(b=>b.classList.remove("active"));
        btn.classList.add("active");
        const category = btn.dataset.category;
        if(category==="All"){ displaySkills(skills3); } 
        else { displaySkills(skills3.filter(s=>s.category===category)); }
    });
});

// Modal
const modal = document.getElementById("skillModal");
document.querySelector(".close").addEventListener("click", ()=> modal.style.display="none");
window.addEventListener("click", e=>{ if(e.target===modal) modal.style.display="none"; });
</script>
</body>
</html>
